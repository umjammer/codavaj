  <url>https://github.com/umjammer/codavaj</url>
  <scm>
    <url>https://github.com/umjammer/codavaj</url>
  </scm>
  <issueManagement>
    <url>https://github.com/umjammer/codavaj/issues</url>
  </issueManagement>
  <name>codavaj</name>

  <properties>
    <!-- for netflix rewrite (default) -->
    <java8.home>/Library/Java/JavaVirtualMachines/jdk1.8.0_291.jdk/Contents/Home</java8.home>
  </properties>

  <profiles>

    <profile>
      <id>codavaj</id>
      <activation>
        <property>
          <name>codavaj</name>
          <value/>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <!-- exec:exec -->
            <!-- $ mvn -P codavaj exec:java -Dexec.args='codavaj "javadocdir" "srcdir"' -->
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.6.0</version>
            <executions>
              <execution>
                <goals>
                  <goal>java</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <mainClass>org.codavaj.Main</mainClass>
              <classpathScope>test</classpathScope>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

